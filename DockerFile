FROM debian:latest
USER root
RUN \
    apt-get -y update && \
    apt-get -y upgrade && \
    apt-get -f install -y --no-install-recommends \
    htop \
    unzip \
    locate \
    p7zip-full \
    vim \
RUN \
    gem install nokogiri 

RUN \
    apt-get install -y \
    python3-pip \
    python3-dev &&\
    cd /usr/local/bin &&\
    ln -s /usr/bin/python3 python &&\
    pip3 install --upgrade pip
